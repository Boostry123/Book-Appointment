<%- include("header") -%>


    <h1>Admin panel</h1>

    <div class="dropdown">
        <button>Create new appointment</button>
        <div class="dropdown-content">
            <form action="/createAppointAdmin" method="post">
                <div>
                    
                        <label for="users">Users:</label>
                        <select id="users" name="username">
                            <% users.forEach((user)=>{ %>
                            <option value="<%= user.username %>">"Email:<%= user.username %> || Name: <%= user.name %>"</option>
                            <% }) %>
                        </select>
                            
                </div>

                <br>
                <hr>

                <div>
                    <% times.forEach((time)=>{ %>
                        <div class="checkbox">
                            <input name="time" type="checkbox" value="<%= time %>"><%= time %></input>
                        </div>
                            <% }) %>
                </div>

                <br>
                <hr>

                <div>
                    <% dates.forEach((date)=>{ %>
                        <input name="date" type="checkbox" value="<%= date %>">
                        <%= date %></input>
                            <% }) %>
                </div>
                <br>
                <hr>
                <div>
                    <label for="phone">Phone / name:</label>
                        <input id="phone" name="phone" type="tel" autocomplete="off"></input>
                </div>
                <button type="submit">Create appointment</button>
        </div>
        </form>

    </div>


    <div>
        <h2>appointments</h2>
        <% foundAppoint.forEach((appoint)=>{ %>
            <% const user=appoint.user %>
                <form action="/removeAppointment" method="post">
                    <div class="adminAppoint">
                        <p>name:<%= appoint.name %>
                        </p>
                        <p>phone:<%= appoint.phone %>
                        </p>
                        <p>date:<%= appoint.date %>
                        </p>
                        <p>time:<%= appoint.time %>
                        </p>
                        <button type="submit" name="appointUser" value="<%= appoint.user %>">Remove appointment</button>
                    </div>
                </form>
                <% }) %>

    </div>
    <div class="logout">
        <a href="/logout" role="button" class="logout">logout</a>
    </div>





    <%- include("footer") -%>